{
  "name": "enterprise-backend",
  "version": "1.0.0",
  "description": "Backend for factoris enterprise",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "start": "tsc -p . && NODE_PATH=./build node build/server.js",
    "build": "tsc --build --verbose",
    "clean": "tsc --build --clean && rm -rf ./build/migrations/*.js",
    "dev": "DATABASE=factoris-pg-dev nodemon src/server.ts",
    "start-docker": "tsc && DATABASE=postgres DATABASE_PORT=5432 node build/server.js"
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "migrations/"
    ],
    "execMap": {
      "ts": "node --inspect=0.0.0.0:9229 --nolazy -r ts-node/register"
    },
    "ext": "ts,json,js"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab-thisa.dyndns.org/factoris/enterprise/backend-enterprise.git"
  },
  "keywords": [
    "backend",
    "factoris",
    "entreprise"
  ],
  "author": "Factoris",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.38", 
    "@types/cors": "^2.8.13",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.1",
    "@types/qrcode": "^1.5.0",
    "@types/validator": "^13.7.17",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.0",
    "convert-units": "^2.3.4",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.0",
    "sequelize-typescript": "2.1.5",
    "sequelize-typescript-paginate": "^1.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1",
    "umzug": "^3.2.1"
  },
  "devDependencies": {
    "@types/convert-units": "^2.3.5",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
